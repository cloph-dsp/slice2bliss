{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "types": ["node"],
    "composite": true,         // Required for project references
    "declaration": true,       // Required for composite projects
    "declarationMap": true,    // Helps with source maps for declarations
    "sourceMap": true,         // Helpful for debugging
    "outDir": "./dist",        // Must specify output directory for emit
    "rootDir": "./src"         // Specify root directory of source files
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
